{
  "name": "@xhs/relinx",
  "version": "2.1.5",
  "description": "Another redux state management using hooks",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "tsdx lint --fix src --ignore-pattern **/__test__/*.js",
    "prepare": "tsdx build",
    "examples:basic": "DIR=basic EXT=js webpack-dev-server",
    "examples:memo": "DIR=memo EXT=js webpack-dev-server",
    "examples:nest-update": "DIR=nest-update EXT=js webpack-dev-server",
    "examples:nest-update-memo": "DIR=nest-update-memo EXT=js webpack-dev-server",
    "examples:simple": "DIR=simple EXT=js webpack-dev-server",
    "examples:immer": "DIR=immer EXT=js webpack-dev-server",
    "flow-check": "flow check --show-all-errors",
    "test": "jest --collect-coverage"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@code.devops.xiaohongshu.com:fe/relinx.git"
  },
  "keywords": [
    "react",
    "hooks",
    "state-management",
    "reactive"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "youchaoliu@xiaohongshu.com",
  "module": "dist/relinx.esm.js",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.8",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-loader": "^6.0.4",
    "tsdx": "^0.13.3",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0"
  },
  "dependencies": {
    "@types/invariant": "^2.2.33",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "invariant": "^2.2.4",
    "ts-jest": "^25.2.0"
  }
}
